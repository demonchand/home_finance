= form_for @income do |f|
  -if @income.errors.any?
    #error_explanation
      %h2= "#{pluralize(@income.errors.count, "error")} prohibited this income from being saved:"
      %ul
        - @income.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name_of_the_income_source
    = f.text_field :name_of_the_income_source
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :money
    = f.text_field :money
  .actions
    = f.submit 'Save'
